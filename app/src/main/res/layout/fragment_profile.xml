<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.dra.fragments.profileFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center"
        android:padding="29dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:background="@drawable/img"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpUserName"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpEmailId"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpPhone"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Are : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpGender"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House No. : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpHouseNo"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locality : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpLocality"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpCity"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpState"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtpPin"
            android:textSize="20sp"
            android:textColor="@color/textIcon"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>
