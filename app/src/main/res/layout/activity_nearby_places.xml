<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/lay">

    <include layout="@layout/top_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospitals Near Me"
                android:layout_marginTop="10dp"
                android:id="@+id/btnHospital"
                android:textColor="@color/textIcon"
                android:background="@color/colorPrimary"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Stores Near Me"
                android:id="@+id/btnMedicalStore"
                android:layout_marginTop="10dp"
                android:textColor="@color/textIcon"
                android:background="@color/colorPrimary"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="veterinary care Near Me"
                android:id="@+id/btnVet"
                android:textColor="@color/textIcon"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dental Hospital Near Me"
                android:id="@+id/btnDentalHospital"
                android:layout_marginTop="10dp"
                android:textColor="@color/textIcon"
                android:background="@color/colorPrimary"
                />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myListView"
            android:background="@drawable/background"
            android:padding="10dp">
        </ListView>
    </LinearLayout>
