<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/myLoginLayout"
    android:padding="50dp">

    <TextView
        android:text="DR. MACS login"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/textIcon"
        android:id="@+id/textdrmacs" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/strethoscope"
        android:layout_gravity="center"
        android:id="@+id/imageView2" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textDirection="firstStrong">
        <RadioButton
            android:id="@+id/rbtnLUsers"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users"
            android:textSize="15dp" />
       <RadioButton
            android:id="@+id/rbtnLDoctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor"
           android:padding="5dp"
            android:textSize="15dp" />

       <RadioButton
            android:id="@+id/rbtnLMedical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Store"
           android:padding="5dp"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rbtnLHospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:padding="5dp"
            android:textSize="15dp" />
    </RadioGroup>

    <EditText
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style"
            android:ems="10"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/primaryText"
            android:textCursorDrawable="@drawable/cursor_color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/style"
            android:id="@+id/txtPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColor="@color/primaryText"
            android:padding="15dp"
            android:layout_below="@+id/txtUserName"
            android:layout_alignStart="@+id/txtUserName"
            android:layout_marginTop="30dp"
            android:hint="PASSWORD"/>

        <Button
            android:text="SIGN IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_border"
            android:id="@+id/btnLogin"
            android:textSize="16dp"
            android:textColor="@color/textIcon"
            android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:text="Register"
        android:id="@+id/LinkToRegister"
        android:background="@drawable/btn_border"
        android:layout_below="@+id/button"
        android:layout_gravity="center"
        android:textColor="@color/textIcon"/>
</LinearLayout>
</ScrollView>