<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context="com.example.lenovo.dra.Activities.RegisterUserActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blood"/>

        <TextView
            android:text="Fill This Form"
            android:textSize="50dp"
            android:textColor="@color/primaryText"
            android:layout_gravity="center"
            android:id="@+id/txtTitle"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="*Blood Group"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/txtBloodGroup"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:hint="Enter Blood Group"/>

        <TextView
            android:text="Urgency"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <EditText
            android:textSize="20dp"
            android:id="@+id/txtUrgency"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:hint="When Do You Need it" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:id="@+id/btnSendBloodRequest"
            android:layout_marginTop="16dp"
            android:background="@color/primaryText"
            android:textColor="@color/textIcon"/>

    </LinearLayout>
</ScrollView>