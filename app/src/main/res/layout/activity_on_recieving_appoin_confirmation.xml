<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_receiving_blood_confirmation"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.dra.Activities.OnRecievingAppoinConfirmation">

    <include layout="@layout/top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textIcon"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="Name Of The Person Who confirmed"
                android:id="@+id/txtNameConfirm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textIcon"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="Hospital has accepted your appointment request.\n You may contact at : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textIcon"
                android:textSize="15sp"
                android:text="Phone No"
                android:layout_marginTop="10dp"
                android:id="@+id/txtConfirmPhoneNo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textIcon"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:text="OK"
                android:id="@+id/btnOK"
                android:background="@drawable/hollow_field"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
