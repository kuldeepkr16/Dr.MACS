<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_recieving_blood_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context="com.example.lenovo.dra.Activities.OnRecievingBloodRequest">

    <include layout="@layout/top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/blood_layout"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:text="Name of sender"
            android:id="@+id/txtSender"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:text="Need Blood Of Blood Group : "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:id="@+id/txtBloodGroup"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:text="Contact Details : "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:text="Contact Details of sender"
            android:id="@+id/txtContact"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textIcon"
            android:text="Urgency"
            android:id="@+id/txtUrgency"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textIcon"
            android:id="@+id/btnConfirm"
            android:text="Confirm"
            android:textAlignment="center"
            android:background="@drawable/btn_border"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textIcon"
            android:text="Sorry, Not Available"
            android:id="@+id/btnNotAvailable"
            android:textAlignment="center"
            android:background="@drawable/hollow_field"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginTop="40dp"
            android:textColor="#00f"
            android:text="What Will These Button Do?"
            android:id="@+id/txtGuide"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
