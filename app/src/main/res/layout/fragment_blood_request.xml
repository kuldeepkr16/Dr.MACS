<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.lenovo.dra.Activities.RegisterUserActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blood"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:padding="30dp">
        <TextView
            android:text="Fill This Form"
            android:textSize="50dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:id="@+id/txtTitle"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="*Blood Group"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

         <Spinner
             android:id="@+id/blood_type_list"
             android:textSize="20dp"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_marginTop="16dp"
             android:padding="5dp"
             android:background="@drawable/border"/>

        <TextView
            android:text="*Urgency"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

         <Spinner
             android:id="@+id/urgency_dropdown"
             android:textSize="20dp"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_marginTop="16dp"
             android:padding="5dp"
             android:background="@drawable/border"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:id="@+id/btnSendBloodRequest"
            android:layout_marginTop="16dp"
            android:background="@color/primaryText"
            android:textColor="@color/textIcon"/>
         </LinearLayout>
    </LinearLayout>
</ScrollView>